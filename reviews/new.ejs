<% layout('layouts/boilerplate') -%>
<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center mt-1">Leave a review</h1>
        <form action="/campgrounds/<%=campground._id%>/reviews" class="mb-3 validated-form" method="POST" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Review</label>
                <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
           <button class="btn btn-success">Submit</button> 
        </form>
    </div>
</div>